<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <!--顶部导航条-->
    <nav class="navbar navbar-default">
        <div class="container">
            <ul class="nav navbar-nav pull-left">
                <li><a>收藏首页</a></li>
                <li class="spacer"></li>
                <li><a>返回首页</a></li>
            </ul>
            <ul class="nav navbar-nav pull-right">
                <li><a>登陆</a></li>
                <li class="spacer"></li>
                <li>@Html.ActionLink("注册","Register","Customer")</li>
                <li class="spacer"></li>
                <li><a>我的订单</a></li>
                <li class="spacer"></li>
                <li><a>服务支持</a></li>
            </ul>
        </div>
    </nav>
    <!--/顶部导航条-->
    <!--搜索-->
    <div class="container">
        <div class="col-md-5">
            <a href="#"><img src="~/Content/Images/logo.png" /></a>
        </div>
        <div class="col-md-5">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="商品名称">
                <span class="input-group-btn">
                    <button class="btn btn-danger btn-width " type="button">搜索</button>
                </span>
            </div>

        </div>

    </div>
    <!--/搜索-->
    <!--菜单-->
    <div class="row menu">
        <div class="container">
            <ul class="nav nav-pills nav-justified">
                <li role="presentation"><a>首页</a></li>
                <li role="presentation"><a>今日特价</a></li>
                <li role="presentation"><a>上衣</a></li>
                <li role="presentation"><a>外套</a></li>
                <li role="presentation"><a>裙子</a></li>
                <li role="presentation"><a>裤子</a></li>
                <li role="presentation"><a>鞋包</a></li>
                <li role="presentation"><a>每周新款</a></li>
            </ul>
        </div>
    </div>
    <!--/菜单-->
    <div id="myCarousel" class="carousel slide">
        <!-- 轮播（Carousel）指标 -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>
        <!-- 轮播（Carousel）项目 -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Images/slide-banner-1.jpg" alt="新款">
                <div class="carousel-caption">标题 1</div>
            </div>
            <div class="item">
                <img src="~/Content/Images/slide-banner-2.jpg" alt="配饰">
                <div class="carousel-caption">标题 2</div>
            </div>
        </div>
        <!-- 轮播（Carousel）导航 -->
        <a class="carousel-control left" role="button" href="#myCarousel"
           data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control right" role="button" href="#myCarousel"
           data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="container">
        <div class="group">
            <h4></h4>
            <ul class="row">
                <li class="col-md-3">
                    <div class="item-card">
                       <div>
                       </div>
                        <div></div>
                    </div>
                </li>
                <li class="col-md-3"></li>
                <li class="col-md-3"></li>
            </ul>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
